<%- layout('listings/layouts/boilerplate') %>

    <div class="row">
      <div class="col-8 offset-2">
        <br>
    <h3><%= listing.title %></h3>
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
    
  <div class="card-body">
      <h6><i>Owned by: <%= listing.owner.username %></i></h6>
      <%= listing.description %> <br>
      &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
      <%= listing.location %> <br>
      <%= listing.country %> <br>
    </div>
      

      <div class="showbtns">  
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit this Listing</a>
      </div>
      <br>
      <div class="showbtns">
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark add-btn">Delete this listing</button>
      </div>


      </form>
      <br>
      
    </div>

    <div class="col-8 offset-2">
      <% if(loggedinUser) { %>
        <hr>
      <h4>Leave a Review</h4>
      <form method="POST" action="/listings/<%= listing.id %>/reviews" novalidate class="needs-validation">
        <div class="form-group mb-3 mt-3">
          <label for="rating" class="form-label"><b>Rating</b></label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="form-group">
          <label for="comment" class="form-label"><b>Comments:</b></label>
          <textarea name="review[comment]" id="comment" cols="110" rows="5" class="form-control" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please enter a comment.
          </div>
        </div>
        <div class="form-group">
          <br>
          <button class="btn btn-dark" type="submit">Submit Review</button>
          <br>
          <br>
        </div>
      </form>
      <%}%>
      <hr>
    
      <h4>All Reviews</h4>
    
      <% if (listing.reviews.length === 0) { %>
        <div class="no-reviews-message">
          <h5>No reviews to display ðŸ˜±</h5>
          <br>
        </div>
      <% } else { %>
        <div class="row">
          <% for (let i = 0; i < listing.reviews.length; i++) { %>
            <div class="col-md-4 mb-3"> <!-- Adjust column size and spacing as per your layout -->
              <% let review = listing.reviews[i]; %>
              <div class="card h-100"> <!-- Ensure each card takes up full height -->
                <div class="card-body">
                  <h5 class="card-title">@<%= review.author.username %></h5>
                  <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                  <p class="card-text mb-0 fs-6">Comment: <%= review.comment %></p>
                </div>
                <div class="card-footer d-flex justify-content-end"> <!-- Use Bootstrap flexbox utilities -->
                  <!-- Delete Form for Each Review -->
                  <% if(loggedinUser) { %>
                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-outline-dark add-btn">Delete</button>
                  <% } %>
                  </form>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% } %>
    </div> 
    
    <div class="col-8 offset-2">
      <hr>
      <h4>Where you'll be:</h4>
    <div id="map"></div>
    <script>
      const mapToken = "<%= process.env.MAP_TOKEN %>";
      const listing = <%- JSON.stringify(listing) %>; // Extract location from listing
      const coordinates = <%= JSON.stringify(listing.geometry.coordinates) %>; // Extract coordinates from listing
    </script>
    <script src="/js/map.js"></script>
    <br>
    </div>
    
  </div>
  <br>
  

  